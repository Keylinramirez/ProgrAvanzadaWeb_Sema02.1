@model IEnumerable<PrograAvanzadaWeb_Sema02._1.ViewModel.CarViewModel>

@{
    ViewData["Title"] = "Lista de Vehículos";
}

<h1>Lista de Vehículos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create new</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>RegisteredTime</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.RegisteredTime</td>
                <td>
                    <a asp-action="Read" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                    <a asp-action="Update" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@car.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this vehicle?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
