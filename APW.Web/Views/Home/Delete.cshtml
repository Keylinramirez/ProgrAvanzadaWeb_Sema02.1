@model APW.Web.Controllers.DeleteCarViewModel

@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<h2>Eliminar Vehículo</h2>

<h2>Cars List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Brand</th>
            <th>Model</th>
            <th>RegisteredTime</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.RegisteredTime</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@car.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this vehicle?')">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>